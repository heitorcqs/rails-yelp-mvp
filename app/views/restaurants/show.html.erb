<h1><%= @restaurant.name %></h1>
<h2>Address: <%=  @restaurant.address%></h2>
<h3>Category: <%= @restaurant.category %></h3>
<h4>Phone_Number: <%= @restaurant.phone_number %> </h4>
<ul>
  <h3>Reviews</h3>
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      <%= link_to "Delete",
        review_path(review),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_restaurant_path(@restaurant)%>
<br>
<%= link_to 'Delete', restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
<br>
<%= link_to 'Back to all restaurants', restaurants_path %>
<br>
<%= link_to 'Add a reviews', new_restaurant_review_path(@restaurant) %>

<br>
